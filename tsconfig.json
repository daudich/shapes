{
    "extends": "@tsconfig/node21/tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "removeComments": true,
        "pretty": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": [
        "dist",
        "node_modules",
        "tests"
    ]
}